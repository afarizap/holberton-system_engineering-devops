#!/usr/bin/env bash
# Configure your Nginx server so that /redirect_me is redirecting to other page
apt-get -y update
apt-get -y install nginx
echo "Holberton School" > /var/www/html/index.html
echo "Ceci n'est pas une page" > /var/www/html/error.html
sed -i 's/server_name _;/server_name _;\nrewrite ^\/redirect_me https://twitter.com/ariza_rocks/photo permanent;\nerror_page 404 \/error.html;/' /etc/nginx/sites-enabled/default
service nginx restart
